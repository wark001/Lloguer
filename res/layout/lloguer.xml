<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >
 
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
	    <TextView
        android:id="@+id/tvSoci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soci"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <EditText
	        android:id="@+id/etSoci"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10"
	        android:inputType="textPersonName" >
	        <requestFocus />
	    </EditText>
	    
    </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
	    <TextView
        android:id="@+id/tvActivitat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipus Activitat"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <Spinner
	        android:id="@+id/spActivitat" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" />

	  </LinearLayout> 
	  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
	    <TextView
        android:id="@+id/etFianca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fiança"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <EditText
	        android:id="@+id/etFianca"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10"
	        android:inputType="number">
	        <requestFocus />
	    </EditText>
	  </LinearLayout>  
	  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
	    <TextView
        android:id="@+id/tvCobrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cobrat"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <EditText
	        android:id="@+id/etCobrat"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10"
	        android:inputType="number">
	        <requestFocus />
	    </EditText>
	 </LinearLayout> 
	 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
          
	    <TextView
        android:id="@+id/tvLloguer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Lloguer"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <EditText
	        android:id="@+id/etLloguer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10"
	        android:onClick="fucnioDataLoguer">
	        <requestFocus />
	    </EditText>
	    
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
          
	    <TextView
        android:id="@+id/tvRetorn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Devolució"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <EditText
	        android:id="@+id/etRetorn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10"
	        android:onClick="fucnioDataRetorn">
	        <requestFocus />
	    </EditText>

	    <Button
	        android:id="@+id/btEraseData"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Borrar data" 
	        android:onClick="borrarDataRetorn"/>
	    
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:id="@+id/afegirMaterial">
   

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
          
	    <TextView
        android:id="@+id/tvMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <EditText
	        android:id="@+id/etMaterial"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10">
	        <requestFocus />
	    </EditText>
	    
	    <Button
	        android:id="@+id/btAddMaterial"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Afegir un altre Material" 
	        android:onClick="afegeixElements"/>
	    <Button
	        android:id="@+id/btMaterialBack"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Tornat" 
	        android:onClick="dataUnMaterial"/>
	     
    </LinearLayout>
     </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

	    <Button
	        android:id="@+id/btLloguer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Realitzar lloguer" 
	        android:onClick="realitza_lloguer"/>

	    <Button
	        android:id="@+id/btCancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Cancel·lar" />

    </LinearLayout>
    
</LinearLayout>